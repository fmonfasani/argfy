# Configuración de base de datos
DATABASE_URL=sqlite:///./data/argentina.db
# Para PostgreSQL en producción:
# DATABASE_URL=postgresql://username:password@localhost/argfy_db

# Configuración de la aplicación
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here
API_KEY_BCRA=your-bcra-api-key

# URLs de APIs externas
BCRA_API_URL=https://api.bcra.gob.ar
INDEC_API_URL=https://apis.datos.gob.ar

# Configuración CORS
CORS_ORIGINS=["http://localhost:3000", "https://argfy.vercel.app"]

# Configuración de Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configuración de logging
LOG_LEVEL=INFO