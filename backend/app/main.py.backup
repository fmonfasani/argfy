@app.on_event("startup")
async def startup_event():
    """Eventos de inicio de la aplicaci√≥n con inicializaci√≥n de Cards"""
    logger.info("üöÄ Iniciando Argfy Platform API v1.1.0 con Cards Din√°micas")
    
    # Verificar sistema de cards
    if CARDS_ROUTER_AVAILABLE:
        logger.info("‚úÖ Sistema de Cards Econ√≥micas disponible")
        try:
            from .services.enhanced_economic_service import enhanced_economic_service
            # Test inicial de cards
            async with enhanced_economic_service:
                test_cards = await enhanced_economic_service.get_economic_cards()
                logger.info(f"üé® Cards econ√≥micas inicializadas: {len(test_cards)} disponibles")
        except Exception as e:
            logger.error(f"‚ö†Ô∏è Error inicializando cards: {e}")
    else:
        logger.warning("‚ö†Ô∏è Sistema de Cards no disponible - requiere implementaci√≥n")
    
    # Inicializar scheduler autom√°ticamente
    if os.getenv("ENABLE_BCRA_SCHEDULER", "true").lower() == "true":
        logger.info("üìÖ Iniciando scheduler autom√°tico de datos BCRA...")
        success = start_scheduler()
        if success:
            logger.info("‚úÖ Scheduler iniciado exitosamente")
        else:
            logger.warning("‚ö†Ô∏è Scheduler ya estaba ejecut√°ndose")
    
    # Keep-alive para Render en producci√≥n
    if os.getenv("ENVIRONMENT") == "production":
        try:
            from .keep_alive import ping_self
            asyncio.create_task(ping_self())
            logger.info("üíì Keep-alive activado para producci√≥n")
        except ImportError:
            logger.warning("‚ö†Ô∏è Keep-alive no disponible")
    
    logger.info("üéØ Argfy Platform lista para recibir requests")
    logger.info(f"üìä Cards System: {'ACTIVE' if CARDS_ROUTER_AVAILABLE else 'PENDING'}")

